<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.MyAnimeDB" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/dark_purple</item>
    <item name="colorPrimaryVariant">@color/purple</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/grey</item>
    <item name="colorSecondaryVariant">@color/light_grey</item>
    <item name="colorOnSecondary">@color/light_brown</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    <!-- Customize your theme here. -->
  </style>

  <style name="Theme.MyAnimeDB.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="Theme.MyAnimeDB.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="Theme.MyAnimeDB.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>